				<input class="inputfieldtext" type="text" id="mail" placeholder="Email" name="mail" required> <br><br>
				<input class="inputfieldtext" type="text" id="createpassword" placeholder="Create a password"  pattern="^\S{6,}$" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Must have at least 6 characters' : ''); if(this.checkValidity()) form.password_two.pattern = this.value;" name="createpassword" required> <br><br>
				<input class="inputfieldtext" type="text" id="confirmpassword" pattern="^\S{6,}$" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Please enter the same Password as above' : '');"  placeholder="Confirm your password" name="confirmpassword" required> <br><br>
				
				<p class="checkboxtext"> <input class="checkboxlook" type="checkbox" value="confirm" required> I accept TP's <a class="hyperlinktext" href="">terms and conditions</a></p>
				<div id="regbutt">
				<input class="loginbutton" type="submit" value="Register"/>
				</div>
